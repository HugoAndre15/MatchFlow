// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  teams     Team[]
  
  @@map("users")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  category    String?  // Senior, U19, U17, etc.
  homeColors  String?
  awayColors  String?
  stadium     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  players     Player[]
  matches     Match[]
  
  @@map("teams")
}

model Player {
  id           String      @id @default(cuid())
  firstName    String
  lastName     String
  position     String
  number       Int
  status       PlayerStatus @default(ACTIVE)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  teamId       String
  team         Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  matchPlayers MatchPlayer[]
  goals        Goal[]
  assists      Assist[]
  cards        Card[]
  substitutions SubstitutionIn[]
  substitutionsOut SubstitutionOut[]
  
  @@unique([teamId, number])
  @@map("players")
}

model Match {
  id           String      @id @default(cuid())
  opponent     String
  date         DateTime
  location     MatchLocation
  status       MatchStatus @default(SCHEDULED)
  ourScore     Int         @default(0)
  opponentScore Int        @default(0)
  startTime    DateTime?
  endTime      DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  teamId       String
  team         Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  matchPlayers MatchPlayer[]
  goals        Goal[]
  assists      Assist[]
  cards        Card[]
  substitutions Substitution[]
  
  @@map("matches")
}

model MatchPlayer {
  id         String           @id @default(cuid())
  position   MatchPosition
  isStarter  Boolean          @default(false)
  minutesPlayed Int           @default(0)
  
  matchId    String
  match      Match            @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId   String
  player     Player           @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@unique([matchId, playerId])
  @@map("match_players")
}

model Goal {
  id        String   @id @default(cuid())
  minute    Int
  isOwnGoal Boolean  @default(false)
  createdAt DateTime @default(now())
  
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@map("goals")
}

model Assist {
  id        String   @id @default(cuid())
  minute    Int
  createdAt DateTime @default(now())
  
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@map("assists")
}

model Card {
  id        String   @id @default(cuid())
  type      CardType
  minute    Int
  reason    String?
  createdAt DateTime @default(now())
  
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@map("cards")
}

model Substitution {
  id        String   @id @default(cuid())
  minute    Int
  createdAt DateTime @default(now())
  
  matchId      String
  match        Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerInId   String
  playerIn     SubstitutionIn  @relation(fields: [playerInId], references: [id])
  playerOutId  String
  playerOut    SubstitutionOut @relation(fields: [playerOutId], references: [id])
  
  @@map("substitutions")
}

model SubstitutionIn {
  id            String         @id @default(cuid())
  playerId      String
  player        Player         @relation(fields: [playerId], references: [id], onDelete: Cascade)
  substitutions Substitution[]
  
  @@map("substitution_ins")
}

model SubstitutionOut {
  id            String         @id @default(cuid())
  playerId      String
  player        Player         @relation(fields: [playerId], references: [id], onDelete: Cascade)
  substitutions Substitution[]
  
  @@map("substitution_outs")
}

enum PlayerStatus {
  ACTIVE
  INJURED
  SUSPENDED
  INACTIVE
}

enum MatchLocation {
  HOME
  AWAY
}

enum MatchStatus {
  SCHEDULED
  LIVE
  FINISHED
  CANCELLED
}

enum MatchPosition {
  GOALKEEPER
  DEFENDER
  MIDFIELDER
  FORWARD
  SUBSTITUTE
}

enum CardType {
  YELLOW
  RED
}